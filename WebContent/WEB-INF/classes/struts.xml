<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<package name="householdaccountbook_web" extends="struts-default">
		<!-- ログイン画面 -->
		<action name="" class="householdaccountbook.action.LoginAction" method="show">
			<result name="success">/jsp/login/login.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		<!-- ログイン処理 -->
		<action name="login_action" class="householdaccountbook.action.LoginAction" method="execute">
			<result name="success">/jsp/main/main.jsp</result>
			<result name="login_error">/jsp/login/login.jsp</result>
		</action>
		<!-- 一覧画面 -->
		<action name="list" class="householdaccountbook.action.ListAction" method="show">
			<result name="success">/jsp/json.jsp</result>
		</action>
		<!-- コンボボックス取得処理(モーダルダイアログ) -->
		<action name="list_combo" class="householdaccountbook.action.ListAction" method="loadCombo">
			<result name="success">/jsp/json.jsp</result>
		</action>
		<!-- 追加処理(モーダルダイアログ) -->
		<action name="insert" class="householdaccountbook.action.ListAction" method="insert">
			<result name="success">/jsp/json.jsp</result>
			<!--type="json"-->
		</action>

	</package>
</struts>